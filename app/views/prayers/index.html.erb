<p id="notice"><%= notice %></p>

<h1>Listing Prayers</h1>

<table>
  <thead>
    <tr>
      <th>Created At</th>
      <th>Title</th>
      <th>Description</th>
      <th>Answered</th>
    </tr>
  </thead>

  <tbody>
    <% @prayers.each do |prayer| %>
      <% if prayer.user == current_user %>
        <tr>
          <td><%= prayer.created_at.strftime("%A, %b %d, %Y") %></td>
          <td><%= prayer.title %></td>
          <td><%= prayer.description %></td>
          <td><%= prayer.answered %></td>
          <td><%= link_to 'Show', prayer %></td>
          <td><%= link_to 'Edit', edit_prayer_path(prayer) %></td>
          <td><%= link_to 'Destroy', prayer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

