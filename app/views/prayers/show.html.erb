<%= link_to 'Back', prayers_path %>
<div class="panel panel-primary">
  <div class="panel-heading">
    <%= @prayer.title %>
    <span class="pull-right"><%= fa_icon "calendar" %> <%= @prayer.created_at.strftime("%A, %b %d, %Y at %H:%M") %></span>
  </div>
  <div class="panel-body">
    <%= @prayer.description %>
  </div>
  <div class="panel-footer">
    <% if @prayer.user == current_user %>
      <%= link_to edit_prayer_path(@prayer), class: "btn btn-info" do %>
        <%= fa_icon "pencil" %>
      <% end %>
      <%= link_to @prayer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
        <%= fa_icon "trash" %>
      <% end %>
    <% end %>
  </div>
</div>
