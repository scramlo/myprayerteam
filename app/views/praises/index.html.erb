<p id="notice"><%= notice %></p>

<h1>
  My Praises
  <%= link_to new_praise_path, class: "btn btn-success" do %>
    <%= fa_icon "plus" %>
  <% end %>
</h1>

    <% @praises.each do |praise| %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <%= praise.title %>
          <span class="pull-right"><%= fa_icon "calendar" %> <%= praise.created_at.strftime("%A, %b %d, %Y at %H:%M") %></span>
        </div>
        <div class="panel-body">
          <%= praise.description %>
        </div>
        <div class="panel-footer">
          <%= link_to edit_praise_path(praise), class: "btn btn-info" do %>
            <%= fa_icon "pencil" %>
          <% end %>
          <%= link_to praise, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
            <%= fa_icon "trash" %>
          <% end %>
          <%= link_to praise_path(praise), class: "btn btn-default pull-right" do %>
            <%= fa_icon "comment" %> Comments
          <% end %>
        </div>
      </div>
    <% end %>

<br>
