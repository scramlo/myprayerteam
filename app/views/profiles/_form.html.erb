<%= bootstrap_form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.text_area :about_me, id: "profile-editor", class: "wysihtml5", placeholder: "Share a bit about yourself..." %>
    <%= f.text_field :profile_img %>
    <%= f.submit %>
<% end %>
<script type="text/javascript">
  $(document).on('page:load', function(){
    window['rangy'].initialized = false
  })

  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5({ toolbar:{ "fa": true, "image": false, "font-styles": false } });
    });

  })
</script>
