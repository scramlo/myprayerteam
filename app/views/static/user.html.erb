        <div class="col-md-6">
          <h3>Hey, <%= current_user.email %></h3>
          <hr>
          <p class="text-center">
            <%= link_to new_prayer_path, class: "btn btn-success" do %>
              <%= fa_icon "plus" %> Request
            <% end %>
          </p>
          <p class="center-block text-center">
            <%= link_to praises_path, class: "btn btn-info" do %>
              <%= fa_icon "eye" %> Praises
            <% end %>
            <img src="<%= @profile.profile_img %>" alt="Profile Picture" id="home-profile-img" class="img-circle img-responsive">
            <%= link_to new_praise_path, class: "btn btn-primary" do %>
              <%= fa_icon "plus" %> Praise
            <% end %>
          </p>
          <p class="text-center">
            <%= link_to prayers_path, class: "btn btn-warning" do %>
              <%= fa_icon "eye" %> Prayers
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
